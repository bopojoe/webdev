<table class="ui selectable inverted table">
  <thead>
    <tr>
      <th>Bookmark Name</th>
      <th>Link</th>
      <th>Summary</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each bookmark.links}}
      <tr>
        <td>
          {{bookmark}}
        </td>
        <td>
          <a href="{{link}}" target="_blank">{{link}}</a>
        </td>
        <td>
          {{summary}}
       </td>
        <td>
          <a href="/bookmark/{{../bookmark.id}}/deletelink/{{id}}" class="ui icon button">
            <i class="icon trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>